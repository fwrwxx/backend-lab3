{
  "info": {
    "name": "Expense Tracker Lab4",
    "_postman_id": "expense-tracker-lab4",
    "description": "JWT authentication flow for Lab 4",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"olia\",\n  \"password\": \"12345\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:5000/api/register",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["api", "register"]
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save token",
              "let json = pm.response.json();",
              "pm.collectionVariables.set(\"token\", json.access_token);",
              "console.log(\"Token saved:\", json.access_token);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"olia\",\n  \"password\": \"12345\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:5000/api/login",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["api", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Get Users (Protected)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:5000/api/users",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["api", "users"]
        }
      },
      "response": []
    },
    {
      "name": "Create Account (Protected)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Main Wallet\",\n  \"balance\": 0\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:5000/api/accounts",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["api", "accounts"]
        }
      },
      "response": []
    },
    {
      "name": "Get Accounts (Protected)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:5000/api/accounts",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["api", "accounts"]
        }
      },
      "response": []
    },
    {
      "name": "Create Record (Protected)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"account_id\": 1,\n  \"amount\": 500,\n  \"type\": \"income\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:5000/api/records",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["api", "records"]
        }
      },
      "response": []
    },
    {
      "name": "Get Records (Protected)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:5000/api/records",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["api", "records"]
        }
      },
      "response": []
    }
  ]
}
